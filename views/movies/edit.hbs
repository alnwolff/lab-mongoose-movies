<h2>Edit movie</h2>

  {{#with movieSelected}}
<form action = "/movies/{{_id}}/edit" method="POST">

    <label for="title">Title:</label> 
    <input id="title" type="text" name="title" value="{{title}}">

    <label for="genre">Genre:</label> 
    <input id="genre" type="text" name="genre" value="{{genre}}">

    <label for="plot">Sinopsis:</label> 
    <input id="plot" type="text" name="plot" value="{{plot}}">
    {{/with}}

  <select name="cast" id="cast" multiple>
		{{#each celebritiesFromDB}}
			<option value="{{_id}}">{{name}}</option>
		{{/each}}
	</select>
  <button type="submit">Edit Movie</button>
</form>